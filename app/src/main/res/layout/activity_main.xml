<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    tools:context="com.dananarief.android.cobalihat.MainActivity">

    <TextView
        android:id="@+id/title_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/location_input_main"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/title_main"/>

    <ImageButton
        android:id="@+id/search_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@android:drawable/ic_search_category_default"
        android:background="@android:color/transparent"
        android:layout_toRightOf="@id/location_input_main"
        android:layout_below="@id/title_main"/>

    <TextView
        android:id="@+id/response_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Jakarta"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/location_input_main"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/response_main"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/Weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Cuaca"
            android:text="Cuaca"
            android:layout_centerHorizontal="true"
            style="@style/TextAppearance.AppCompat.SearchResult.Title"/>

        <TextView
            android:id="@+id/Weather_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Wind"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/Weather"
            style="@style/TextAppearance.AppCompat.Display1"/>

    </RelativeLayout>


</RelativeLayout>
